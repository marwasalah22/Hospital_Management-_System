@model Hospital_Management__System.Models.Nurse
@{
    ViewData["Title"] = "Create";}

<div class="row justify-content-center">
    <div class="col-md-5">
        <h2 class="fw-semibold mt-5" style="margin-left:33%; margin-bottom:25px;">New Nurse</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-evenly">
                <div class="form-group mb-3 col-9">
                    <label asp-for="NurseName" class="control-label"> Name</label>
                    <input asp-for="NurseName" class="form-control" />
                    <span asp-validation-for="NurseName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-9">
                    <label asp-for="NurseEmail" class="control-label"> Email</label>
                    <input asp-for="NurseEmail" class="form-control" />
                    <span asp-validation-for="NurseEmail" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 col-9">
                    <label asp-for="NurseDepartment" class="control-label">Department</label>
                    <select asp-for="NurseDepartment" name="nurseDepartment" class="form-select ">
                        <option value="Cardiology">Cardiology</option>
                        <option value="Neurology">Neurology</option>
                        <option value="Hepatology">Hepatology</option>
                        <option value="Pediatrics">Pediatrics</option>
                        <option value="Surgery">Surgery</option>
                        <option value="Orthopedics">Orthopedics</option>
                        <option value="Radiology">Radiology</option>
                        <option value="Pathology">Pathology</option>
                    </select>
                </div>
            </div>
            <div class="form-group mt-3">
                <input style="margin-left:45%" type="submit" value="Create" class="btn btn-primary mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="margin-left:47%" asp-action="Index"> <i class="bi bi-arrow-left"></i> Back to List</a>
</div>


